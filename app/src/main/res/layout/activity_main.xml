<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:weightSum="1"
    android:gravity="top"
    android:layout_alignParentBottom="false"
    android:background="@drawable/gradient_bg">

    <!--tools:context="org.thomaschen.leave.MainActivity"-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="#253748"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L e a v e"
            android:textSize="18sp"
            android:id="@+id/logoTxt"
            android:textAllCaps="true"
            android:textColor="?android:attr/textColorPrimary" />


        <Button
            android:layout_gravity="right"
            android:background="@drawable/settings"
            android:layout_width="5dp"
            android:layout_height="19dp"
            android:layout_marginRight="15dp"
            android:id="@+id/settingBtn"
            android:paddingRight="40dp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp">

        <android.support.constraint.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="?attr/colorPrimaryDark"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:id="@+id/alarm1">


            <ImageView
                app:srcCompat="@drawable/alarmicon"
                android:id="@+id/alarmImg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_width="34dp"
                android:layout_height="33dp" />

            <TextView
                android:text="8:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numTime"
                android:textColor="@color/subduedTextColor"
                android:textSize="30sp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/alarmImg"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:text="Gym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locationText"
                android:textSize="15sp"
                android:textColor="@color/subduedTextColor"
                tools:layout_conversion_absoluteX="79dp"
                tools:layout_conversion_absoluteY="116dp"
                tools:layout_conversion_absoluteWidth="40dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/numTime"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintLeft_toLeftOf="@+id/numTime" />


            <TextView
                android:text="AM"
                android:layout_height="wrap_content"
                android:id="@+id/timePeriodText"
                android:textColor="@color/subduedTextColor"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/numTime"
                app:layout_constraintLeft_toRightOf="@+id/numTime"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:gravity="right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:id="@+id/addBtn"
        android:background="@color/transparent"
        tools:layout_editor_absoluteY="-29dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_centerInParent="true" />

</RelativeLayout>
