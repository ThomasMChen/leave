<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_trigger"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.thomaschen.leave.TriggerActivity"
    android:background="@drawable/gradient_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="#253748"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L e a v e"
            android:textSize="18sp"
            android:id="@+id/txtLogo"
            android:textAllCaps="true"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="24sp"
            android:id="@+id/txtTriggerTitle"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:layout_gravity="right"
            android:layout_marginRight="15dp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp">

        <android.support.constraint.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="?attr/colorPrimaryDark"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:id="@+id/constraintHeader">


            <TextView
                android:text="8:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTime"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp" />

            <TextView
                android:text="Gym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtLocationLabel"
                android:textSize="15sp"
                android:textColor="@color/white"
                tools:layout_conversion_absoluteX="79dp"
                tools:layout_conversion_absoluteY="116dp"
                tools:layout_conversion_absoluteWidth="40dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/txtTime"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintLeft_toLeftOf="@+id/txtTime" />


            <TextView
                android:text="AM"
                android:layout_height="wrap_content"
                android:id="@+id/txtTimePeriod"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/txtTime"
                app:layout_constraintLeft_toRightOf="@+id/txtTime"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchSilence"
                android:gravity="right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:id="@+id/barFuse"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:maxHeight="10dp"
        android:minWidth="10dp" />

</RelativeLayout>
